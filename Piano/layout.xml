<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="버튼을 누르면 소켓 연결됩니다."
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edServerIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="172.18.4.56"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#009688"
            android:gravity="center"
            android:text="서버 연결하기"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#009688"
            android:gravity="center"
            android:text="서버 연결 종료"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:background="@drawable/border2"
        android:gravity="center"
        android:orientation="horizontal"
        android:outlineProvider="none"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:measureAllChildren="true"
            android:visibility="visible">

            <View
                android:id="@+id/Black"
                android:layout_width="18dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginLeft="36dp"
                android:background="#000000"
                android:outlineProvider="none"
                android:visibility="visible" />

            <Button
                android:id="@+id/DO"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play도"
                android:text="도\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/RE"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play레"
                android:text="레\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />



            <View
                android:id="@+id/Black1"
                android:layout_width="18dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginLeft="84dp"
                android:background="#000000"
                android:outlineProvider="none"
                android:visibility="visible" />

            <Button
                android:id="@+id/MI"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="92dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play미"
                android:text="미\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:measureAllChildren="true"
            android:visibility="visible">

            <Button
                android:id="@+id/FA"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play파"
                android:text="파\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/Black2"
                android:layout_width="18dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginLeft="36dp"
                android:background="#000000"
                android:outlineProvider="none"
                android:visibility="visible" />

            <Button
                android:id="@+id/SOL"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play솔"
                android:text="솔\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/Black4"
                android:layout_width="18dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginLeft="84dp"
                android:background="#000000"
                android:outlineProvider="none"
                android:visibility="visible" />

            <Button
                android:id="@+id/RA"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="92dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play라"
                android:text="라\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/Black3"
                android:layout_width="18dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginLeft="128dp"
                android:background="#000000"
                android:outlineProvider="none"
                android:visibility="visible" />

            <Button
                android:id="@+id/SI"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="140dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="bottom"
                android:onClick="play시"
                android:text="시\n"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </FrameLayout>


        <Button
            android:id="@+id/DO_H"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:gravity="bottom"
            android:onClick="play도_높"
            android:text="도\n"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/hand" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:gravity="right"
        android:text="20200679 정민선\n20200680 조예지\n20200732 노아정"
        android:textColor="#000000"
        android:textSize="13sp" />

</LinearLayout>
 